<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllerClasses.AddFaceCare">
    <children>
        <ImageView fitHeight="405.0" fitWidth="700.0" layoutY="-2.0" pickOnBounds="true">
            <image>
                <Image url="@../images/mainpage.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="priceField" layoutX="429.0" layoutY="175.0" promptText="Price" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="quantityField" layoutX="429.0" layoutY="224.0" promptText="Quantity" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="modelField" layoutX="429.0" layoutY="127.0" promptText="Model" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="descriptionField" layoutX="429.0" layoutY="273.0" promptText="Description" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <ChoiceBox fx:id="categoryChoiceBox" layoutX="429.0" layoutY="76.0" prefHeight="27.0" prefWidth="187.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white; -fx-text-fill: black;" />
        <Text layoutX="259.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add face-body care">
            <font>
                <Font name="Yu Gothic Light" size="51.0" />
            </font>
        </Text>
        <Button fx:id="backBtn" layoutX="159.0" layoutY="269.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="78.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 2px 2px 2px 2px; -fx-border-color: black;" text="Back">
            <font>
                <Font name="Calisto MT" size="13.0" />
            </font>
        </Button>
        <Button fx:id="addFaceCareBtn" layoutX="417.0" layoutY="349.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="211.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: black;" text="Add">
            <font>
                <Font name="Yu Gothic Medium" size="14.0" />
            </font>
        </Button>
      <CheckBox fx:id="maleCheckBox" layoutX="448.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleMaleBox" text="Male">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="femaleCheckBox" layoutX="536.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleFemaleBox" text="Female">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
    </children>
</AnchorPane>
